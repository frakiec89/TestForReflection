<Window x:Class="ReflectionWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ReflectionWPF"
        mc:Ignorable="d"
        Title="Рефлексия"   MinHeight="100" MinWidth="250" SizeToContent="WidthAndHeight" >
    <Grid>
        <StackPanel>
            <TextBox Margin="10" x:Name="pathTb"></TextBox>
            <Label>укажите путь  к  библиотеки TestForReflection.dll </Label>
            <Button x:Name="selectBt" Click="selectBt_Click" Margin="10">Выбрать</Button>
            <Button x:Name="goBt" Margin="10" Click="goBt_Click" >Войти</Button>
            <Button x:Name="goRefBt" Margin="10" Click="goRefBt_Click" >Войти через рефлексию</Button>
            <Label Margin="10" Name="infoLb"></Label>
        </StackPanel>
    </Grid>
</Window>
